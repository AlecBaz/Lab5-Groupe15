<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlagActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Select A Flag"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        tools:layout_editor_absoluteX="78dp" />.

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="408dp"
        android:layout_height="625dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCA"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_00" />

            <ImageView
                android:id="@+id/imageEG"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_01" />

            <ImageView
                android:id="@+id/imageFR"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_02" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center">

            <ImageView
                android:id="@+id/imageSP"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_05" />

            <ImageView
                android:id="@+id/imageKR"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_04" />

            <ImageView
                android:id="@+id/imageJP"
                android:layout_width="125dp"
                android:layout_height="128dp"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_03" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center">

            <ImageView
                android:id="@+id/imageUS"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_08" />

            <ImageView
                android:id="@+id/imageUK"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_07" />

            <ImageView
                android:id="@+id/imageTR"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                app:srcCompat="@drawable/flag_06" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>